<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:communityToolkit="using:CommunityToolkit.WinUI.UI.Converters"
    xmlns:converters="using:ARSounds.UI.WinUI.Converters">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/ARSounds.UI.WinUI/Themes/Styles/Brushes.xaml" />
        <ResourceDictionary Source="/ARSounds.UI.WinUI/Themes/Styles/FontSizes.xaml" />
        <ResourceDictionary Source="/ARSounds.UI.WinUI/Themes/Styles/TextBlock.xaml" />
        <ResourceDictionary Source="/ARSounds.UI.WinUI/Themes/Styles/Thickness.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <converters:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />

    <communityToolkit:BoolToVisibilityConverter
        x:Key="BoolToVisibilityConverter"
        FalseValue="Collapsed"
        TrueValue="Visible" />

    <communityToolkit:BoolToVisibilityConverter
        x:Key="FlipBoolToVisibilityConverter"
        FalseValue="Visible"
        TrueValue="Collapsed" />

</ResourceDictionary>