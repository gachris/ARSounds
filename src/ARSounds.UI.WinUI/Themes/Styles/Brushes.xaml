<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Default">
            <SolidColorBrush x:Key="Avatar.Background" Color="#001E51" />
            <SolidColorBrush x:Key="Avatar.Foreground" Color="#FFFFFF" />
            <SolidColorBrush x:Key="NavigationViewContentBackground" Color="Transparent" />
            <SolidColorBrush x:Key="NavigationViewContentBorderBrush" Color="#3D3D3D" />
        </ResourceDictionary>
        <ResourceDictionary x:Key="HighContrast">
            <SolidColorBrush x:Key="Avatar.Background" Color="{ThemeResource SystemColorWindowColor}" />
            <SolidColorBrush x:Key="Avatar.Foreground" Color="{ThemeResource SystemColorWindowTextColor}" />
            <SolidColorBrush x:Key="NavigationViewContentBackground" Color="{ThemeResource SystemColorWindowColor}" />
            <SolidColorBrush x:Key="NavigationViewContentBorderBrush" Color="{ThemeResource SystemColorWindowTextColor}" />
        </ResourceDictionary>
        <ResourceDictionary x:Key="Light">
            <SolidColorBrush x:Key="Avatar.Background" Color="#001E51" />
            <SolidColorBrush x:Key="Avatar.Foreground" Color="#FFFFFF" />
            <SolidColorBrush x:Key="NavigationViewContentBackground" Color="Transparent" />
            <SolidColorBrush x:Key="NavigationViewContentBorderBrush" Color="#F0F0F0" />
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>
