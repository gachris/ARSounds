<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:devtoolbox="http://devtoolbox.wpf/winfx/2021/xaml/presentation"
    xmlns:ui="clr-namespace:ARSounds.UI.Wpf">
    <ResourceDictionary.MergedDictionaries>
        <devtoolbox:ThemePartResourceDictionary>
            <devtoolbox:ThemePartResourceDictionary.Key>
                <devtoolbox:ThemePartKeyExtension
                    AssemblyName="ARSounds.UI.Wpf"
                    Path="/Themes/Dark/Generic.xaml"
                    ThemeName="Dark" />
            </devtoolbox:ThemePartResourceDictionary.Key>
        </devtoolbox:ThemePartResourceDictionary>
        <devtoolbox:ThemePartResourceDictionary>
            <devtoolbox:ThemePartResourceDictionary.Key>
                <devtoolbox:ThemePartKeyExtension
                    AssemblyName="ARSounds.UI.Wpf"
                    Path="/Themes/Light/Generic.xaml"
                    ThemeName="Light" />
            </devtoolbox:ThemePartResourceDictionary.Key>
        </devtoolbox:ThemePartResourceDictionary>
        <ResourceDictionary Source="pack://application:,,,/ARSounds.UI.Wpf;component/Themes/Styles/ARCamera.xaml" />
        <ResourceDictionary Source="pack://application:,,,/ARSounds.UI.Wpf;component/Themes/Styles/Button.xaml" />
        <ResourceDictionary Source="pack://application:,,,/ARSounds.UI.Wpf;component/Themes/Styles/Control.xaml" />
        <ResourceDictionary Source="pack://application:,,,/ARSounds.UI.Wpf;component/Themes/Styles/DropDown.xaml" />
        <ResourceDictionary Source="pack://application:,,,/ARSounds.UI.Wpf;component/Themes/Styles/Frame.xaml" />
        <ResourceDictionary Source="pack://application:,,,/ARSounds.UI.Wpf;component/Themes/Styles/Page.xaml" />
        <ResourceDictionary Source="pack://application:,,,/ARSounds.UI.Wpf;component/Themes/Styles/Separator.xaml" />
        <ResourceDictionary Source="pack://application:,,,/ARSounds.UI.Wpf;component/Themes/Styles/ToggleButton.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <ui:ViewModelLocator x:Key="ViewModelLocator" />

    <devtoolbox:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />

    <devtoolbox:BoolToVisibilityConverter
        x:Key="BoolToVisibilityConverter"
        FalseValue="Collapsed"
        TrueValue="Visible" />

    <devtoolbox:BoolToVisibilityConverter
        x:Key="FlipBoolToVisibilityConverter"
        FalseValue="Visible"
        TrueValue="Collapsed" />

</ResourceDictionary>