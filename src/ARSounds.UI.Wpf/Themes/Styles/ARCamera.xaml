<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:openVision="http://openVision/winfx/2021/xaml/presentation">

    <Style TargetType="{x:Type openVision:ARCamera}">
        <Setter Property="Focusable" Value="False" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Background" Value="{DynamicResource ARCamera.Background}" />
        <Setter Property="BorderBrush" Value="{DynamicResource ARCamera.BorderBrush}" />
    </Style>

</ResourceDictionary>